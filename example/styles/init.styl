body
  background #fff
  margin 0
  padding 0

#init-splash
  background #e0e0e0
  border-radius 10px
  width w = 100px
  height h = w
  line-height h
  text-align center
  position absolute
  top 50%
  left 50%
  margin-left -(w / 2)
  margin-top -(h / 2)
  animation rotateplane 2s infinite ease-in-out

@keyframes rotateplane
  0%
    transform perspective(200px) rotateX(0deg) rotateY(0deg)
  50%
    transform perspective(200px) rotateX(-180.1deg) rotateY(0deg)
  100%
    transform perspective(200px) rotateX(-180deg) rotateY(-179.9deg)

#init-error
    background url('img/init-error.png') center top no-repeat
    width w = 750px
    position absolute
    top 45px
    left 50%
    margin-left -(w / 2)

    p
      border-radius 10px
      background #aa4438
      font 18px/26px Arial, Helvetica, sans-serif
      color rgba(255, 255, 255, 0.75)
      padding 40px 45px
      margin 250px 0 0 0
      text-align center
